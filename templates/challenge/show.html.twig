        {# <script src="assets/js/popup.js"></script> #}
        <script src="{{ asset('assets/js/popup.js') }}"></script>

        {# <script src="assets/js/custom.js"></script>  #}
        <script src="{{ asset('assets/js/custom.js') }}"></script>
    {% endblock %}

{% endblock %}